{
    "files.exclude": {
        "**/build": true,
        "**/dist": true,
        "**/.git": true,
        "**/*.pyc": true
    },
    "python.unitTest.nosetestArgs": [
        "py"
    ],
    "python.unitTest.nosetestsEnabled": true,
    "python.autoComplete.extraPaths": [
        "${workspaceRoot}/lib/py/src",
        "${workspaceRoot}/gui/py/src"
    ],
    "python.linting.pep8Enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.pylintArgs": ["--disable=C0111", "--disable=C0103", "--disable=E0401", "--disable=E1101"]
}
