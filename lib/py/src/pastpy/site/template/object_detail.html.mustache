<!DOCTYPE html>
<html lang="en">

<head>
    {{>head_meta.html}} {{>head_css.html}}
    <title>{{metadata.configuration.name}} - Object {{object.id}}</title>

    <script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "CreativeWork",
            {{#object.standard_attributes_json.othername}}
            "alternateName": {{{object.standard_attributes_json.othername}}},
            {{/object.standard_attributes_json.othername}}
            "copyrightHolder": "{{{metadata.configuration.copyright_holder}}}",
            {{#object.standard_attributes_json.description}}
            "description": {{{object.standard_attributes_json.description}}},
            {{/object.standard_attributes_json.description}}
            {{#object.standard_attributes_json.title}}
            "headline": {{{object.standard_attributes_json.title}}},
            {{/object.standard_attributes_json.title}}
            "identifier": {{{object.standard_attributes_json.id}}},
            {{#object.standard_attributes_json.name}}
            "name": {{{object.standard_attributes_json.name}}},
            {{/object.standard_attributes_json.name}}
            {{#object.standard_attributes_json.date}}
            "temporalCoverage": {{{object.standard_attributes_json.date}}},
            {{/object.standard_attributes_json.date}}
            "thumbnailUrl": "{{{object.thumbnail_url}}}"
        }
    </script>
</head>

<body>
    <div class="container-fluid">
        {{>navbar.html}} {{#object.has_full_size_images}}
        <div class="row text-center w-100">
            {{#object.full_size_images}}
            <div style="display: inline-block; padding-bottom: 20px; padding-right: 20px">
                <a href="{{{full_size_url}}}" data-lity data-lity-desc="{{{title}}}">
                    <img alt="{{title}}" src="{{{thumbnail_url}}}" title="{{title}}">
                </a>
            </div>
            {{/object.full_size_images}}
        </div>
        {{/object.has_full_size_images}}
        <div class="row">
            <table class="table table-bordered table-striped">
                {{#object.impl_attributes}}
                <tr>
                    <td style="width: 10%">{{name}}</td>
                    <td>{{value}}</td>
                </tr>
                {{/object.impl_attributes}}
            </table>
        </div>
    </div>
    {{>footer.html}} {{>scripts.html}}
</body>

</html>